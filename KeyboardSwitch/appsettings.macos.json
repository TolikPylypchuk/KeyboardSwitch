{
  "Settings": {
    "Path": "%HOME%/.kswitch/settings.db"
  },
  "Serilog": {
    "Using": [
      "Serilog.Settings.Configuration",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Debug"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@Level = 'Information' and StartsWith(SourceContext, 'Avalonia.ReactiveUI')"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "%HOME%/.kswitch/kswitch.log",
                "restrictedToMinimumLevel": "Information",
                "fileSizeLimitBytes": 10000000,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 2,
                "shared": true
              }
            }
          ]
        }
      },
      {
        "Name": "Console"
      },
      {
        "Name": "Debug"
      }
    ]
  }
}
