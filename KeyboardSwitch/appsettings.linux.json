{
  "Settings": {
    "Path": "%HOME%/.keyboard-switch/settings.db"
  },
  "Startup": {
    "StartupFilePath": "%HOME%/.config/autostart/keyboard-switch.desktop"
  },
  "Serilog": {
    "Using": [
      "Serilog.Settings.Configuration",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Debug"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "Filter": [
      {
        "Name": "ByIncludingOnly",
        "Args": {
          "expression": "StartsWith(SourceContext, 'KeyboardSwitch')"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "%HOME%/.keyboard-switch/keyboard-switch.log",
                "restrictedToMinimumLevel": "Debug",
                "fileSizeLimitBytes": 10000000,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 2,
                "shared": true
              }
            }
          ]
        }
      },
      {
        "Name": "Console"
      },
      {
        "Name": "Debug"
      }
    ]
  }
}
