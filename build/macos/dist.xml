<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <pkg-ref id="io.tolik.keyboardswitch.service"/>
    <pkg-ref id="io.tolik.keyboardswitch.settings"/>
    <product id="io.tolik.keyboardswitch" version="4.1.0"/>
    <title>Keyboard Switch</title>
    <options customize="never" require-scripts="false" hostArchitectures="%ARCH%" />
    <volume-check>
        <allowed-os-versions>
            <os-version min="10.11" />
        </allowed-os-versions>
    </volume-check>
    <readme file="readme.txt" mime-type="text/plain" />
    <license file="license.txt" mime-type="text/plain" />
    <choices-outline>
        <line choice="default">
            <line choice="io.tolik.keyboardswitch.service" />
            <line choice="io.tolik.keyboardswitch.settings" />
        </line>
    </choices-outline>
    <choice id="default"/>
    <choice id="io.tolik.keyboardswitch.service" visible="false">
        <pkg-ref id="io.tolik.keyboardswitch.service" />
    </choice>
    <pkg-ref id="io.tolik.keyboardswitch.service" version="4.1.0" onConclusion="none">KeyboardSwitchService.pkg</pkg-ref>
    <choice id="io.tolik.keyboardswitch.settings" visible="false">
        <pkg-ref id="io.tolik.keyboardswitch.settings" />
    </choice>
    <pkg-ref id="io.tolik.keyboardswitch.settings" version="4.1.0" onConclusion="none">KeyboardSwitchSettings.pkg</pkg-ref>
</installer-gui-script>
