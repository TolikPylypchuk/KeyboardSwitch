<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KeyboardSwitch.Settings.Views.LayoutView">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="Layout" />
            <ColumnDefinition Width="*" SharedSizeGroup="Chars" />
        </Grid.ColumnDefinitions>
        
        <StackPanel VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0">
            <TextBlock x:Name="LanguageTextBlock" FontSize="14" Margin="2" />
            <TextBlock x:Name="KeyboardTextBlock" FontSize="10" Margin="2,0,2,2" />
        </StackPanel>

        <TextBox x:Name="CharsTextBox" Grid.Column="1" FontFamily="Consolas" FontSize="16"
                 VerticalAlignment="Center" HorizontalAlignment="Stretch" MinWidth="100" />
    </Grid>
</UserControl>
