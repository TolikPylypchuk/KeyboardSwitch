<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="using:KeyboardSwitch.Settings.Localization"
             x:Class="KeyboardSwitch.Settings.Views.SandboxView">
    <DockPanel>
        <TextBlock Text="{l:Translate SandboxInfo}" Margin="10" DockPanel.Dock="Top"
                   FontSize="{DynamicResource FontSizeNormal}" TextWrapping="Wrap" />

        <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"
                 AcceptsReturn="True" FontSize="14" TextWrapping="Wrap" />
    </DockPanel>
</UserControl>
