<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:KeyboardSwitch.Settings.Localization"
             x:Class="KeyboardSwitch.Settings.Views.CharMappingView">
    <DockPanel>
        <StackPanel x:Name="ActionPanel">
            <Button x:Name="SaveButton" Content="{l:Translate Save}" Classes="Primary" />
            <Button x:Name="CancelButton" Content="{l:Translate Cancel}" />
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                      VerticalAlignment="Stretch">
            <ItemsControl x:Name="Layouts" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Grid.IsSharedSizeScope="True" />
        </ScrollViewer>
    </DockPanel>
</UserControl>
