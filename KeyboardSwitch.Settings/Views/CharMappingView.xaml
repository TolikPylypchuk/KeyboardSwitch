<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:KeyboardSwitch.Settings.Localization"
             x:Class="KeyboardSwitch.Settings.Views.CharMappingView">
    <DockPanel>
        <StackPanel x:Name="ActionPanel" DockPanel.Dock="Bottom">
            <Button x:Name="SaveButton" Content="{l:Translate Save}" Classes="Primary" />
            <Button x:Name="CancelButton" Content="{l:Translate Cancel}" />
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                      VerticalAlignment="Stretch">
            <DockPanel VerticalAlignment="Top">
                <Button x:Name="AutoConfigureButton" DockPanel.Dock="Bottom" Content="{l:Translate AutoConfigure}"
                        FontSize="{DynamicResource FontSizeLarge}" Classes="Primary" Margin="10"
                        HorizontalAlignment="Center" />
                
                <ItemsControl x:Name="Layouts" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                              Grid.IsSharedSizeScope="True" />
            </DockPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
