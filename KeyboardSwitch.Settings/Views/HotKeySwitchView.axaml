<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:KeyboardSwitch.Settings.Localization"
             x:Class="KeyboardSwitch.Settings.Views.HotKeySwitchView">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="{l:Translate Modifiers}" Classes="Label" />
            <ComboBox x:Name="ModifierKeysComboBox" Classes="FormControl" />

            <TextBlock Text="{l:Translate Forward}" Classes="Label" />
            <ContentControl x:Name="ForwardContent" VerticalAlignment="Center" />

            <TextBlock Text="{l:Translate Backward}" Classes="Label" />
            <ContentControl x:Name="BackwardContent" VerticalAlignment="Center" />
        </StackPanel>

        <TextBlock x:Name="ForwardValidationRequiredTextBlock" Classes="Error" />
        <TextBlock x:Name="ForwardValidationTextBlock" Classes="Error" />
        <TextBlock x:Name="BackwardValidationRequiredTextBlock" Classes="Error" />
        <TextBlock x:Name="BackwardValidationTextBlock" Classes="Error" />
        <TextBlock x:Name="SwitchMethodsValidationTextBlock" Classes="Error" />
    </StackPanel>
</UserControl>
