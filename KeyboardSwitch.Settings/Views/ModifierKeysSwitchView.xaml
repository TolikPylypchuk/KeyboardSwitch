<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="clr-namespace:KeyboardSwitch.Settings.Localization"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KeyboardSwitch.Settings.Views.ModifierKeysSwitchView">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="{l:Translate Forward}" VerticalAlignment="Center" Margin="0,0,10,0" />
            <ComboBox x:Name="ForwardComboBox" Margin="0,0,10,0" />
            
            <TextBlock Text="{l:Translate Backward}" VerticalAlignment="Center" Margin="0,0,10,0" />
            <ComboBox x:Name="BackwardComboBox" />
        </StackPanel>
    </StackPanel>
</UserControl>
