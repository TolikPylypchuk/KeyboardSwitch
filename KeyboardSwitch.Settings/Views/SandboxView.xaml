<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:KeyboardSwitch.Settings.Localization"
             x:Class="KeyboardSwitch.Settings.Views.SandboxView">
    <DockPanel>
        <TextBlock Text="{l:Translate SandboxInfo}" Margin="10" DockPanel.Dock="Top" FontSize="14" />

        <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"
                 AcceptsReturn="True" FontSize="14" />
    </DockPanel>
</UserControl>
