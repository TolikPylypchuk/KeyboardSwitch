{
  "Settings": {
    "Path": "KeyboardSwitch\\settings.db"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Async",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Debug"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Overrides": {
        "KeyboardSwitch": "Debug",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "KeyboardSwitch.log",
                "restrictedToMinimumLevel": "Information",
                "fileSizeLimitBytes": 524288000,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 2,
                "shared": true
              }
            }
          ]
        }
      },
      {
        "Name": "Console"
      },
      {
        "Name": "Debug"
      }
    ]
  }
}
