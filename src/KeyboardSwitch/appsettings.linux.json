{
  "Settings": {
    "SettingsFilePath": "%HOME%/.config/keyboard-switch/settings.json",
    "StateFilePath": "%HOME%/.config/keyboard-switch/state.json",
    "ServicePath": "./KeyboardSwitch",
    "InitialSetupFilePath": "%HOME%/.config/keyboard-switch/.setup-configured"
  },
  "Startup": {
    "StartupFilePath": "%HOME%/.config/autostart/keyboard-switch.desktop"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "Filter": [
      {
        "Name": "ByIncludingOnly",
        "Args": {
          "expression": "StartsWith(SourceContext, 'KeyboardSwitch')"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "%HOME%/.keyboard-switch/keyboard-switch.log",
                "restrictedToMinimumLevel": "Debug",
                "fileSizeLimitBytes": 10000000,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 2,
                "shared": true
              }
            }
          ]
        }
      },
      {
        "Name": "Console"
      },
      {
        "Name": "Debug"
      }
    ]
  }
}
